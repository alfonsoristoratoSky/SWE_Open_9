<div class="row">
  <h2>Restaurants</h2>
  <div class="col-sm-12">
    <a href='/restaurants/create'>Add New Restaurant</a>
  </div>
</div>
<div class="row">
  
  {{#if restaurants.length }}
  {{#each restaurants }}
  <div class="card col-md-6">{{> restaurantPartial this }}</div>
  {{/each}}

  {{else}}
  <p>No restaurants left :(</p>
  {{/if}}

  {{#if restaurants.[1]}}

  {{else}}
  <div class="row col-sm-12">
    <a href="/restaurants"> Back to list</a>
  </div>
  {{/if}}

</div>

<div class="row">

<div class="col-md-6">


  <h2>Menus not assigned</h2>
  <p style="visibility: hidden">
    Could not be bothered to play with margins</p>

<div class="col-sm-12">
  <a href='/restaurants/createMenu'>Add New Menu</a>
</div>
  <table class="table table-bordered align-middle">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Total cost</th>
        <th scope="col">Items count</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#if menus.length }}
      {{#each menus }}
      {{> menuPartial this }}
      {{/each}}
      {{else}}
      <p>No unassigned Menus left - YAY!</p>
      {{/if}}
    </tbody>
  </table>
</div>


<div class="col-md-6">

  <h2>Menu Items not assigned</h2>
  <p>(or assigned to a "not assigned" menu)</p>

<div class="col-sm-12">
  <a href='/restaurants/createMenuItem'>Add New Menu Item</a>
</div>
  <table class="table table-bordered align-middle">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Menu Id</th>    
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#if menuItems.length }}
      {{#each menuItems }}
      {{> menuItemPartial this }}
      {{/each}}
      {{else}}
      <p>No unassigned Menu Items left - YAY!</p>
      {{/if}}
    </tbody>
  </table>
</div>

</div>
