<div class="row">
  <h2>Restaurants</h2>
  <div class="col-sm-12">
        <a class="btn" href='/restaurants/create'>Add New</a>
    </div>
</div>
<div class="col-md-12">
  {{#if restaurants.length }}
  {{#each restaurants }}
  {{> restaurantItem this }}
  {{/each}}
  {{else}}
  <p>No restaurants left :(</p>
  {{/if}}
  {{#if restaurants.[1]}}
  
  {{else}}
  <div class="row col-sm-12">
    <a href="/restaurants"> Back to list</a>
  </div>
  {{/if}}  
</div>